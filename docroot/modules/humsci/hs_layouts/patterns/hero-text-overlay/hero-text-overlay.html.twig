{%- set attributes = attributes.addClass('hb-hero-overlay') -%}

{% if variant %}
  {% set variant_class = "hb-hero-overlay--color-#{variant}" %}
  {% set attributes = attributes.addClass(variant_class) %}
{% endif %}

{% set text_content = overlay_text %}
{% if overlay_text['field_hs_hero_title'] is defined %}
  {% set text_content %}
    <{{ heading_tag }}>
      {{ overlay_text['field_hs_hero_title'] }}
    </{{ heading_tag }}>
    {{ overlay_text|without('field_hs_hero_title') }}
  {% endset %}
{% endif %}

{% apply spaceless %}
  <div{{ attributes }}>
    <div class="hb-hero-overlay__image-wrapper">
      {{ image }}
    </div>

    <div class="hb-hero-overlay__text">
      {{ text_content }}
    </div>
  </div>
{% endapply %}
