{% set attributes = attributes.addClass('mrc-event-card') %}

<div{{ attributes }}>

  {% if image %}
    <div class="mrc-event-card__img">
      {{ image }}
    </div>
  {% endif %}

  <div class="mrc-event-card__content">
    {% if program %}
      <div class="mrc-event-card__program">{{ program }}</div>
    {% endif %}

    {% if date %}
      <div class="mrc-event-card__date">{{ date }}</div>
    {% endif %}

    <div class=mrc-event-card__subcontent>
      {% if time %}
        <div class="mrc-event-card__time">{{ time }}</div>
      {% endif %}

      {% if time and location %}
        <div class="pipe">|</div>
      {% endif %}

      {% if location %}
        <div class="mrc-event-card__location">{{ location }}</div>
      {% endif %}
    </div>

    {% if speaker %}
      <div class="mrc-event-card__speaker">{{ speaker }}</div>
    {% endif %}

    {% if title %}
      <h2 class="mrc-event-card__title">{{ title }}</h2>
    {% endif %}
  </div>
</div>
