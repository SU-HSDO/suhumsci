
{% set attributes = attributes.addClass('mrc-visitors-grid-card') %}

<div{{ attributes }}>
  <div class="mrc-visitors-grid__item">
    {% if image %}
      <div class="mrc-visitors-grid__img">
        {{ image }}
      </div>
    {% endif %}
    <div class="mrc-visitors-grid__content">
      {% if name %}
        <h3 class="mrc-visitors-grid__name">{{ name }}</h3>
      {% endif %}
      {% if title %}
        <div class="mrc-visitors-grid__title">{{ title }}</div>
      {% endif %}
      {% if research_areas %}
        <div class="mrc-visitors-grid__research">{{ research_areas }}</div>
      {% endif %}
    </div>
  </div>
</div>
