{%
  set classes = [
    'hb-card',
    'hb-card--horizontal'
  ]
 %}

{%- set attributes = attributes.addClass(classes) -%}
{%- set url = url|render|striptags('<drupal-render-placeholder>')|trim -%}
{%- set has_image = image|render|striptags('<drupal-render-placeholder><span><div><picture><source><img>')|trim -%}

<div{{ attributes }}>

  {% if has_image is not empty %}
    <div class="hb-card__img">
      {{ image }}
    </div>
  {% endif %}

  <div class="hb-card__content">
    {% if category %}
        <div class="hb-card__category hb-card__category--accent">{{ category }}</div>
    {% endif %}

    {% if title %}
      <div class="hb-card__title">{{ title }}</div>
    {% endif %}

    {% if time|render|trim or location|render|trim or date or speaker|render|trim %}
      {#  create array and cycle through with pipes? #}
      {# /set will probably work - not sure abt arrays #}
      {% set general_variants = {'date': date, 'time': time, 'location': location, 'speaker': speaker} %}

      <div class="hb-card__subcontent">
        {% for key, variant in general_variants %}
          {% if variant %}
            <div class="hb-card__subcontent-item">{{ variant }}</div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    {% if description %}
      <div class="hb-card__description">{{ description }}</div>
    {% endif %}

    {% if url %}
      <a href="{{ url }}" class="hb-card__decorative-link" aria-label="link to content"></a>
    {% endif %}
  </div>
</div>
