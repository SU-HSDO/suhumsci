{% if page.help %}
  <div class="hb-page-width">
    {{ page.help }}
  </div>
{% endif %}

<div id="main-content">
  {{ page.content }}
</div>

{# Local Footer #}
{% if page.footer %}
  <div class="hb-local-footer {{ local_footer_variant_classname }}">
    <div class="hb-page-width flex-container flex-container--row-gap">
      {{ page.footer }}
    </div>
  </div>
{% endif %}

