{% set attributes = attributes.addClass('card') %}

<div{{ attributes }}>

  {% if image %}
    <div class="event-card__img">
      {{ image }}
    </div>
  {% endif %}

  <div class="event-card__content">
    {% if category %}
      <div class="event-card__category accent-dash">{{ category }}</div>
    {% endif %}

    {% if date %}
      <div class="event-card__date">{{ date }}</div>
    {% endif %}

    <div class=event-card__subcontent>
      {% if time %}
        <div class="event-card__time">{{ time }}</div>
      {% endif %}

      {% if time and location %}
        <div class="pipe">|</div>
      {% endif %}

      {% if location %}
        <div class="event-card__location">{{ location }}</div>
      {% endif %}
    </div>

    {% if title %}
      <h3 class="event-card__title">{{ title }}</h3>
    {% endif %}

    {% if speaker %}
      <div class="event-card__speaker">{{ speaker }}</div>
    {% endif %}

  </div>
</div>
