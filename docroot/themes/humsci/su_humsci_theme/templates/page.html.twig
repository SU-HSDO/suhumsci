<header id="header">
  <div class="decanter-grid">

    {% if page.header %}
      <div id="header-region">
        {{ page.header }}
      </div>
    {% endif %}

    {% if page.search %}
      <div id="search-region">
        {{ page.search }}
      </div>
    {% endif %}

  </div>

  {% if page.menu %}
    <div class="decanter-grid">
      <div id="menu-region" class="decanter-width-one-whole decanter-end-row">
        {{ page.menu }}
      </div>
    </div>
  {% endif %}

</header>

{% if page.help or page.highlighted %}
  <div id="help-region" class="decanter-grid">
    {{ page.help }}
    {{ page.highlighted }}
  </div>
{% endif %}

<div id="main-content" class="main-container {{ main_class }}">
  {{ page.content }}
</div>

{% if page.footer %}
  <footer id="footer">
    <div class="decanter-grid">
      {{ page.footer }}
    </div>
  </footer>
{% endif %}
